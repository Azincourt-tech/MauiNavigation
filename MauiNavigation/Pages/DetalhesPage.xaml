<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNavigation.Pages.DetalhesPage"
             Title="Detalhes Page">

    <VerticalStackLayout VerticalOptions="Center"
                         Spacing="30"
                         Padding="30">

        <Label 
            Text="{Binding Nome}"
            FontSize="30"
            HorizontalOptions="Center" />

        <Label 
            Text="{Binding Email}"
            FontSize="30"
            HorizontalOptions="Center" />

        <Label 
            Text="{Binding Idade}"
            FontSize="30"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>